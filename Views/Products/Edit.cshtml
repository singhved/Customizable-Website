@model SecondWeb.Models.Product

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/AdminPanel.cshtml";
}

<h5>Edit</h5>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>MyProduct</h4>
        <br/>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
            <input type="text" class="form-control" value="@Model.Name" />
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Details, htmlAttributes: new { @class = "control-label" })
            <input type="text" class="form-control" value="@Model.Details" />
            @Html.ValidationMessageFor(model => model.Details, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Field, htmlAttributes: new { @class = "control-label" })
            <input type="text" class="form-control" value="@Model.Field" />
            @Html.ValidationMessageFor(model => model.Field, "", new { @class = "text-danger" })
        </div>
        <div class="row">
            <div class="col-sm-2">
                <div class="form-group ">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-primary" style="margin-top: 10px" />
                            <a type="button" href="/Products/Index" class="btn btn-primary" style="margin-top: 10px">Back</a>
                        </div>

                    </div>

                </div>
            </div>

        </div>
    </div>
}


