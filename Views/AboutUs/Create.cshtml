@model SecondWeb.Models.AboutUs

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/AdminPanel.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h4>AboutUs</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                @Html.LabelFor(model => model.Heading, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Heading, new { htmlAttributes = new { @class = "form-control", @maxlength = "100", @required = "required" } })
                @Html.ValidationMessageFor(model => model.Heading, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="col-sm-12">
        <div class="form-group">
            @Html.LabelFor(model => model.Details, htmlAttributes: new { @class = "control-label" })
            <textarea rows="4" id="Details" name="Details" class="form-control" required></textarea>
            @Html.ValidationMessageFor(model => model.Details, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
